            position_open := true
            entry_price := entry_price_rr
            entry_signal := "第2步突破"
        
        // 啟動第3步監控
        step3_active := true
        step3_entry_price := entry_price_rr
        step3_stop_loss := stop_loss_rr
        step3_take_profit := take_profit_rr
