        // 交易邏輯：第3步完成時出場
        if enable_trading and position_open and in_date_range()
            strategy.close("多頭", comment="第3步完成出場")
            position_open := false
            entry_price := na
            entry_signal := na
        
        // 第3步成功完成，重置監控狀態
